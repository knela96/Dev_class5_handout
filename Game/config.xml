<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>Assets/maps/</folder>
  </map>
  
  <scenes>
    <scene1>
      <map>Map1.1.tmx</map>
      <camera x="500" y ="200" />
    </scene1>
  </scenes>

  <player>
    <life value="3"/>
    <dead value="false"/>
    <folder>Assets/Sprites/Character/</folder>
    <texture source="Player.png" />
    <collider w="50" h="50" />
    <gravity value="2"/>
    <jumpSpeed value="20"/>
    <maxFallingSpeed value="10"/>
    <walkSpeed value="8" />
    <speed x ="0" y="0" />
    <animations>
      <idle x="0" y="0" w="40" h="40" loop="false" speed="0.1f"/>
    </animations>
  </player>

</config>